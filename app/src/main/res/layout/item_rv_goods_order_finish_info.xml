<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/DefaultLinearLayoutBg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_6">
        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京某某砂石料公司"
            android:textColor="@color/color_block"
            />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textColor="@color/color_tangerine_level_1"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_1"
        android:background="@color/color_divider1"
        android:layout_marginTop="@dimen/view_space_8"
        android:layout_marginBottom="@dimen/view_space_8"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京 ----> 沧州"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_block"
            />
        <TextView
            android:id="@+id/tv_goods_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="籽料/20吨/17.5米／平板"
            android:layout_below="@+id/tv_destination"
            android:layout_marginTop="@dimen/view_space_8"
            android:layout_marginBottom="@dimen/view_space_4"
            />
        <ImageView
            android:id="@+id/iv_user_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_default_portrait"
            android:layout_below="@+id/tv_goods_info"
            android:layout_marginRight="@dimen/view_space_8"
            />

        <TextView
            android:id="@+id/tv_nike_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宋小宝"
            android:layout_toRightOf="@+id/iv_user_portrait"
            android:layout_alignTop="@+id/iv_user_portrait"
            android:layout_above="@+id/tv_register_time"
            />
        <TextView
            android:id="@+id/tv_register_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已注册4年已发货1234条"
            android:layout_toRightOf="@+id/iv_user_portrait"
            android:layout_alignBottom="@+id/iv_user_portrait"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_1"
            android:background="@color/color_divider1"
            android:layout_marginTop="@dimen/view_space_8"
            android:layout_marginBottom="@dimen/view_space_8"
            />

        <Button
            android:id="@+id/btn_function"
            android:layout_width="70dp"
            android:layout_height="40dp"
            style="@style/DefaultButtonBg"
            android:layout_marginRight="0dp"
            android:text="去取货"
            android:textSize="14sp"
            android:layout_gravity="right"
            />

    </LinearLayout>

</LinearLayout>