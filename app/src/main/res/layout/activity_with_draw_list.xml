<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_with_draw_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.km.transport.module.personal.account.withdraw.WithDrawListActivity">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请绑定持卡人的银行卡"
        style="@style/BackGauge"

        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_hint"
        android:layout_above="@+id/btn_add_account">

    </android.support.v7.widget.RecyclerView>

    <com.phillipcalvin.iconbutton.IconButton
        android:id="@+id/btn_add_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_add_white_48px"
        android:text="新建账户"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_16"
        app:iconPadding="5dp"
        android:background="@drawable/shape_button_default"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/view_space_16"
        />

</RelativeLayout>
