<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context="com.km.transport.module.home.path.newpath.SelectCityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/view_space_8"
        android:paddingRight="@dimen/view_space_8">
        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择出发地："
            android:layout_marginBottom="@dimen/view_space_16"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_back_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回上一级"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_blue5"
            android:visibility="gone"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_unlimited"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="不限"
        style="@style/DefaultButtonBg1"
        android:layout_marginBottom="@dimen/view_space_8"
        android:layout_marginTop="@dimen/view_space_8"
        android:layout_marginLeft="@dimen/view_space_8"
        android:visibility="gone"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/view_space_8"
        android:paddingRight="@dimen/view_space_8">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
