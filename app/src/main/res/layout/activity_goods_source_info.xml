            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e9e9e9"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_space_16"
                android:layout_marginLeft="@dimen/view_space_64"
                android:layout_marginRight="@dimen/view_space_64"
                >

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请填写接货价格/每吨"
                    android:layout_marginTop="@dimen/view_space_4"
                    android:layout_marginBottom="@dimen/view_space_4"
                    android:background="#00ffffff"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:inputType="number"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_low_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低价竞标"
                android:background="@drawable/shape_button_home_hire"
                android:textColor="@color/color_white"
                android:layout_marginLeft="@dimen/view_space_48"
                android:layout_marginRight="@dimen/view_space_48"
                android:layout_marginTop="@dimen/view_space_16"
                android:layout_marginBottom="@dimen/view_space_16"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

