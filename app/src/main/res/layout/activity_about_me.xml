<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.km.transport.module.personal.AboutMeActivity">

    <RelativeLayout
        android:id="@+id/rl_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_desktop_logo"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/rl_logo"
        android:layout_marginTop="@dimen/view_space_32">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="每一次被打开，都承载着信任与追求"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="土石物流，服务地球"
            android:gravity="center"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="@dimen/view_space_8"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_space_16">

        <TextView
            android:id="@+id/tv_cur_app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前版本 1.1.1"
            android:textSize="@dimen/text_size_14"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_app_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.tushikeji.com"
            android:textSize="@dimen/text_size_14"
            android:inputType="textUri"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>
