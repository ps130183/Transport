<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/view_space_16"
    android:paddingRight="@dimen/view_space_16"
    android:paddingTop="@dimen/view_space_32"
    tools:context="com.km.transport.module.home.path.newpath.AddFastPathActivity">

    <RelativeLayout
        android:id="@+id/rl_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginBottom="@dimen/view_space_8"
        android:padding="@dimen/view_space_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起点"
            android:textColor="@color/color_block"
            />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:textColor="@color/color_block"
            android:layout_toLeftOf="@+id/iv_start_down_arrow"

            />
        <ImageView
            android:id="@+id/iv_start_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_down_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_8"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/view_space_8"
        android:layout_marginBottom="@dimen/view_space_8"
        android:padding="@dimen/view_space_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终点"
            android:textColor="@color/color_block"
            />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:textColor="@color/color_block"
            android:layout_toLeftOf="@+id/iv_end_down_arrow"

            />
        <ImageView
            android:id="@+id/iv_end_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_down_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_8"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_truck_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/view_space_8"
        android:padding="@dimen/view_space_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车型"
            android:textColor="@color/color_block"
            />

        <TextView
            android:id="@+id/tv_truck_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:textColor="@color/color_block"
            android:layout_toLeftOf="@+id/iv_truck_type_down_arrow"

            />
        <ImageView
            android:id="@+id/iv_truck_type_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_down_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_8"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_home_hire"
        android:text="添加"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/view_space_32"
        android:layout_marginRight="@dimen/view_space_32"
        android:layout_marginTop="@dimen/view_space_64"
        />

</LinearLayout>
